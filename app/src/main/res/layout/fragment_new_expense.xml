<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewExpenseFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="New Expense"
        android:textSize="25dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#594444"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:entries="@array/expenseTypes"/>



    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:drawableEnd="@drawable/baseline_attach_money_24"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:background="@null"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>


    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:drawableEnd="@drawable/baseline_calendar_month_24"
        android:foregroundTint="@color/design_default_color_primary"
        android:hint="Calendar"
        android:inputType="date"
        android:background="@null"
        android:paddingRight="10dp"
        android:focusable="false"
        android:clickable="true"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/editTextNote"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:drawableEnd="@drawable/baseline_create_24"
        android:hint="Note"
        android:inputType="text"
        android:background="@null"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@drawable/rounded_button"
            android:text="Save"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:text="Reset"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>